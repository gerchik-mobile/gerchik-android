<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- fontWeight
        100 Thin
        200 Extra Light
        300 Light
        400 Normal
        500 Medium
        600 Semi Bold
        700 Bold
        800 Extra Bold
        900 Ultra Bold -->

    <font
        android:font="@font/sfuitext_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/sfuitext_regular"
        app:fontStyle="normal"
        app:fontWeight="400"
        tools:targetApi="o" />

    <font
        android:font="@font/sfuitext_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/sfuitext_medium"
        app:fontStyle="normal"
        app:fontWeight="500"
        tools:targetApi="o" />

    <font
        android:font="@font/sfuitext_semibold"
        android:fontStyle="normal"
        android:fontWeight="600"
        app:font="@font/sfuitext_semibold"
        app:fontStyle="normal"
        app:fontWeight="600"
        tools:targetApi="o" />

    <font
        android:font="@font/sfuitext_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/sfuitext_bold"
        app:fontStyle="normal"
        app:fontWeight="700"
        tools:targetApi="o" />

</font-family>